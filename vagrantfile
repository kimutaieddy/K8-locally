Vagrant.configure("2") do |config|
  config.vm.box = "fedora/40-cloud-base"

  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048"
    vb.cpus = 2
  end

  ["master", "node1", "node2"].each do |node_name|
    config.vm.define node_name do |node|
      node.vm.hostname = node_name
      node.vm.network "private_network", ip: "192.168.56.1#{node_name[-1]}"
      node.vm.synced_folder ".", "/vagrant", type: "rsync"
      
      if node_name == "master"
        node.vm.network "forwarded_port", guest: 8001, host: 3030, auto_correct: true
        node.vm.network "forwarded_port", guest: 80, host: 8080
        node.vm.network "forwarded_port", guest: 3000, host: 3000
      end
    end
  end

  provisioning_scripts = [
    "disable-swap",
    "install-essential-tools",
    "allow-bridge-nf-traffic",
    "install-containerd",
    "install-kubeadm",
    "update-kubelet-config"
  ]

  provisioning_scripts.each do |script_name|
    config.vm.provision "shell", name: script_name, path: "scripts/#{script_name}.sh", privileged: false
  end
end