# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Specify the box to use
  config.vm.box = "fedora/40-cloud-base"

  # Configure the VirtualBox provider
  config.vm.provider "virtualbox" do |vb|
    # Customize the amount of memory on the VM:
    vb.memory = "2048"
    # Customize the number of CPUs on the VM:
    vb.cpus = 2
  end

  config.vm.define "master" do |node|
    node.vm.hostname = "master"
    node.vm.network "private_network", ip: "192.168.56.10"
    node.vm."forwarded_port", guest: 80, host: 8080
    
  # Optional: Forward a port from the guest to the host
  config.vm.network "forwarded_port", guest: 80, host: 8080

  # Optional: Set up a synced folder
  config.vm.synced_folder ".", "/vagrant", type: "virtualbox"

  # Optional: Provisioning with a shell script
  config.vm.provision "shell", inline: <<-SHELL
    sudo dnf update -y
    sudo dnf install -y httpd
  SHELL
end